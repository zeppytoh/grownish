---
// src/pages/index.astro
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grownish | Navigate Adulting Without the Pressure</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta
      name="description"
      content="Helping young adults navigate life's challenges with confidence and community."
    />
  </head>
  <body class="bg-background text-gray-900 font-['Poppins']">
    <Header activeLink="home" />

    <section class="py-20 md:py-32">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div class="max-w-2xl">
            <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
              Navigate Adulting Without The Pressure
            </h1>
            <div class="text-2xl text-secondary mt-8">
              Figuring it out together, one mistake at a time.
            </div>
            <p class="text-xl text-gray-600 mb-8">
              You don't have to have it all figured out right now. Join a
              community of young adults who are also figuring out this whole
              "grown-up" thing.
            </p>
            <div class="flex flex-wrap gap-4">
              <a
                href="/quiz"
                class="px-6 py-3 bg-primary text-white font-medium rounded-lg hover:bg-primary-dark transition"
              >
                Take The Adulting Quiz
              </a>
              <a
                href="#stories"
                class="px-6 py-3 border border-primary text-primary font-medium rounded-lg hover:bg-primary-light hover:bg-opacity-10 transition"
              >
                Explore Stories
              </a>
            </div>
          </div>

          <!-- Hero Graphic Container -->
          <div
            class="bg-primary-light bg-opacity-10 rounded-xl p-6 flex items-center justify-center"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 800 800"
              class="w-full h-auto"
            >
              <!-- Background -->
              <rect width="800" height="800" fill="#F9FAFB"></rect>

              <!-- Decorative backdrop elements -->
              <circle
                cx="200"
                cy="400"
                r="300"
                fill="#4F46E5"
                fill-opacity="0.05"></circle>
              <circle
                cx="650"
                cy="200"
                r="150"
                fill="#F59E0B"
                fill-opacity="0.08"></circle>
              <circle
                cx="600"
                cy="600"
                r="180"
                fill="#10B981"
                fill-opacity="0.07"></circle>

              <!-- Central platform - represents adulthood stage -->
              <rect
                x="150"
                y="500"
                width="500"
                height="30"
                rx="10"
                fill="#4F46E5"
                fill-opacity="0.2"></rect>
              <rect
                x="150"
                y="500"
                width="500"
                height="10"
                rx="5"
                fill="#4F46E5"
                fill-opacity="0.3"></rect>

              <!-- Steps leading up to adulthood - different levels of "adulting" -->
              <rect
                x="250"
                y="530"
                width="300"
                height="20"
                rx="5"
                fill="#4F46E5"
                fill-opacity="0.15"></rect>
              <rect
                x="270"
                y="550"
                width="260"
                height="20"
                rx="5"
                fill="#4F46E5"
                fill-opacity="0.1"></rect>
              <rect
                x="290"
                y="570"
                width="220"
                height="20"
                rx="5"
                fill="#4F46E5"
                fill-opacity="0.05"></rect>

              <!-- Central character - young adult -->
              <g transform="translate(400, 450)">
                <!-- Body -->
                <rect
                  x="-30"
                  y="-90"
                  width="60"
                  height="90"
                  rx="20"
                  fill="#4F46E5"></rect>

                <!-- Head -->
                <circle cx="0" cy="-110" r="30" fill="#FFD6B1"></circle>

                <!-- Eyes -->
                <circle cx="-10" cy="-115" r="3" fill="#333"></circle>
                <circle cx="10" cy="-115" r="3" fill="#333"></circle>

                <!-- Smile -->
                <path
                  d="M-10 -105 Q0 -95 10 -105"
                  fill="none"
                  stroke="#333"
                  stroke-width="2"></path>

                <!-- Arms -->
                <rect
                  x="-55"
                  y="-80"
                  width="25"
                  height="8"
                  rx="4"
                  fill="#FFD6B1"
                  transform="rotate(-30 -55 -80)"></rect>
                <rect
                  x="30"
                  y="-80"
                  width="25"
                  height="8"
                  rx="4"
                  fill="#FFD6B1"
                  transform="rotate(30 30 -80)"></rect>

                <!-- Legs -->
                <rect x="-25" y="0" width="10" height="50" rx="5" fill="#333"
                ></rect>
                <rect x="15" y="0" width="10" height="50" rx="5" fill="#333"
                ></rect>

                <!-- Feet -->
                <rect x="-32" y="48" width="20" height="8" rx="4" fill="#222"
                ></rect>
                <rect x="12" y="48" width="20" height="8" rx="4" fill="#222"
                ></rect>
              </g>

              <!-- Left character - slightly struggling with adulthood -->
              <g transform="translate(250, 480)">
                <!-- Body -->
                <rect
                  x="-25"
                  y="-70"
                  width="50"
                  height="70"
                  rx="15"
                  fill="#F59E0B"></rect>

                <!-- Head -->
                <circle cx="0" cy="-90" r="25" fill="#FFD6B1"></circle>

                <!-- Eyes -->
                <circle cx="-8" cy="-95" r="2.5" fill="#333"></circle>
                <circle cx="8" cy="-95" r="2.5" fill="#333"></circle>

                <!-- Uncertain expression -->
                <path
                  d="M-8 -85 Q0 -87 8 -85"
                  fill="none"
                  stroke="#333"
                  stroke-width="1.5"></path>

                <!-- Arms with box (adulting task) -->
                <rect
                  x="-45"
                  y="-60"
                  width="20"
                  height="6"
                  rx="3"
                  fill="#FFD6B1"
                  transform="rotate(-30 -45 -60)"></rect>
                <rect
                  x="25"
                  y="-60"
                  width="20"
                  height="6"
                  rx="3"
                  fill="#FFD6B1"
                  transform="rotate(30 25 -60)"></rect>
                <rect
                  x="-25"
                  y="-40"
                  width="50"
                  height="30"
                  rx="2"
                  fill="#10B981"
                  fill-opacity="0.5"></rect>

                <!-- Legs -->
                <rect x="-20" y="0" width="8" height="40" rx="4" fill="#333"
                ></rect>
                <rect x="12" y="0" width="8" height="40" rx="4" fill="#333"
                ></rect>

                <!-- Feet -->
                <rect x="-25" y="38" width="15" height="6" rx="3" fill="#222"
                ></rect>
                <rect x="10" y="38" width="15" height="6" rx="3" fill="#222"
                ></rect>
              </g>

              <!-- Right character - more confident in adulthood -->
              <g transform="translate(550, 460)">
                <!-- Body -->
                <rect
                  x="-25"
                  y="-70"
                  width="50"
                  height="70"
                  rx="15"
                  fill="#10B981"></rect>

                <!-- Head -->
                <circle cx="0" cy="-90" r="25" fill="#FFD6B1"></circle>

                <!-- Eyes -->
                <circle cx="-8" cy="-95" r="2.5" fill="#333"></circle>
                <circle cx="8" cy="-95" r="2.5" fill="#333"></circle>

                <!-- Confident smile -->
                <path
                  d="M-8 -83 Q0 -78 8 -83"
                  fill="none"
                  stroke="#333"
                  stroke-width="1.5"></path>

                <!-- Arms with thumbs up -->
                <rect
                  x="-35"
                  y="-70"
                  width="20"
                  height="6"
                  rx="3"
                  fill="#FFD6B1"
                  transform="rotate(-20 -35 -70)"></rect>
                <rect
                  x="15"
                  y="-65"
                  width="15"
                  height="6"
                  rx="3"
                  fill="#FFD6B1"
                  transform="rotate(50 15 -65)"></rect>
                <rect
                  x="28"
                  y="-70"
                  width="10"
                  height="6"
                  rx="3"
                  fill="#FFD6B1"
                  transform="rotate(0 28 -70)"></rect>

                <!-- Legs -->
                <rect x="-20" y="0" width="8" height="40" rx="4" fill="#333"
                ></rect>
                <rect x="12" y="0" width="8" height="40" rx="4" fill="#333"
                ></rect>

                <!-- Feet -->
                <rect x="-25" y="38" width="15" height="6" rx="3" fill="#222"
                ></rect>
                <rect x="10" y="38" width="15" height="6" rx="3" fill="#222"
                ></rect>
              </g>

              <!-- Adulting icons floating above -->

              <!-- Financial icon -->
              <g transform="translate(300, 280)">
                <circle
                  cx="0"
                  cy="0"
                  r="40"
                  fill="#F9FAFB"
                  stroke="#4F46E5"
                  stroke-width="2"></circle>
                <text
                  x="0"
                  y="0"
                  font-family="Arial"
                  font-size="40"
                  fill="#4F46E5"
                  text-anchor="middle"
                  dominant-baseline="middle">$</text
                >
              </g>

              <!-- Home icon -->
              <g transform="translate(400, 230)">
                <circle
                  cx="0"
                  cy="0"
                  r="40"
                  fill="#F9FAFB"
                  stroke="#10B981"
                  stroke-width="2"></circle>
                <path
                  d="M-20 0 L0 -20 L20 0 L20 20 L-20 20 Z"
                  fill="none"
                  stroke="#10B981"
                  stroke-width="2"></path>
                <rect
                  x="-5"
                  y="5"
                  width="10"
                  height="15"
                  fill="none"
                  stroke="#10B981"
                  stroke-width="2"></rect>
              </g>

              <!-- Career icon -->
              <g transform="translate(500, 280)">
                <circle
                  cx="0"
                  cy="0"
                  r="40"
                  fill="#F9FAFB"
                  stroke="#F59E0B"
                  stroke-width="2"></circle>
                <rect
                  x="-15"
                  y="-15"
                  width="30"
                  height="35"
                  fill="none"
                  stroke="#F59E0B"
                  stroke-width="2"
                  rx="2"></rect>
                <line
                  x1="-10"
                  y1="-5"
                  x2="10"
                  y2="-5"
                  stroke="#F59E0B"
                  stroke-width="2"></line>
                <line
                  x1="-10"
                  y1="5"
                  x2="10"
                  y2="5"
                  stroke="#F59E0B"
                  stroke-width="2"></line>
                <line
                  x1="-10"
                  y1="15"
                  x2="10"
                  y2="15"
                  stroke="#F59E0B"
                  stroke-width="2"></line>
              </g>

              <!-- Connection lines between characters (community aspect) -->
              <line
                x1="270"
                y1="400"
                x2="380"
                y2="400"
                stroke="#4F46E5"
                stroke-width="2"
                stroke-opacity="0.3"
                stroke-dasharray="5,5"></line>
              <line
                x1="420"
                y1="400"
                x2="530"
                y2="400"
                stroke="#4F46E5"
                stroke-width="2"
                stroke-opacity="0.3"
                stroke-dasharray="5,5"></line>

              <!-- Progress path arrow -->
              <path
                d="M200 350 Q400 280 600 350"
                fill="none"
                stroke="#10B981"
                stroke-width="3"
                stroke-opacity="0.4"
                stroke-dasharray="10,10"></path>
              <polygon
                points="590,350 600,345 595,360"
                fill="#10B981"
                fill-opacity="0.6"></polygon>
            </svg>
          </div>
        </div>
      </div>
    </section>

    <section id="about" class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Why Grownish?
        </h2>
        <p class="text-xl text-gray-600 text-center max-w-3xl mx-auto mb-16">
          Being an adult doesn't come with a manual. We're building the resource
          we wish we had when we started our adulting journey.
        </p>

        <div class="grid md:grid-cols-3 gap-8">
          <div
            class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition hover:translate-y-[-5px]"
          >
            <div
              class="w-16 h-16 bg-indigo-100 text-indigo-600 flex items-center justify-center rounded-full text-2xl mb-6"
            >
              🛡️
            </div>
            <h3 class="text-xl font-semibold mb-4">No Pressure Zone</h3>
            <p class="text-gray-600">
              Learn at your own pace without judgment. Everyone's adulting
              journey looks different, and that's perfectly okay.
            </p>
          </div>

          <div
            class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition hover:translate-y-[-5px]"
          >
            <div
              class="w-16 h-16 bg-indigo-100 text-indigo-600 flex items-center justify-center rounded-full text-2xl mb-6"
            >
              👥
            </div>
            <h3 class="text-xl font-semibold mb-4">Find Your Tribe</h3>
            <p class="text-gray-600">
              Connect with a community of fellow adulting works-in-progress.
              You're not alone in figuring this out.
            </p>
          </div>

          <div
            class="bg-white rounded-xl p-8 shadow-md hover:shadow-lg transition hover:translate-y-[-5px]"
          >
            <div
              class="w-16 h-16 bg-indigo-100 text-indigo-600 flex items-center justify-center rounded-full text-2xl mb-6"
            >
              💪
            </div>
            <h3 class="text-xl font-semibold mb-4">Build Real Confidence</h3>
            <p class="text-gray-600">
              Transform anxiety into capability. Every adulting challenge you
              overcome builds real-world confidence.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section id="quiz" class="py-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          What's Your Adulting Score?
        </h2>
        <p class="text-xl text-gray-600 text-center max-w-3xl mx-auto mb-12">
          Take our quiz to discover your adulting style, strengths, and
          opportunities to level up. No judgment here - we're all figuring it
          out together!
        </p>

        <div class="max-w-3xl mx-auto bg-surface rounded-xl shadow-md p-8">
          <div class="text-center mb-8">
            <h3 class="text-2xl font-semibold mb-3">Start The Quiz</h3>
            <p class="text-gray-600">
              Answer 15 quick questions to see where you stand in your adulting
              journey.
            </p>
          </div>

          <div>
            <div class="mb-8">
              <h4 class="text-lg font-medium mb-4">
                1. Your paycheck just hit your account. Your first move is to:
              </h4>
              <div class="space-y-3">
                <div
                  class="border border-border rounded-lg p-4 cursor-pointer hover:border-primary hover:bg-primary-light hover:bg-opacity-5 transition"
                >
                  A) Immediately buy those shoes you've been eyeing for weeks
                </div>
                <div
                  class="border border-border rounded-lg p-4 cursor-pointer hover:border-primary hover:bg-primary-light hover:bg-opacity-5 transition"
                >
                  B) Pay some bills and spend the rest without much thought
                </div>
                <div
                  class="border border-border rounded-lg p-4 cursor-pointer hover:border-primary hover:bg-primary-light hover:bg-opacity-5 transition"
                >
                  C) Transfer a set amount to savings, then handle bills and
                  other expenses
                </div>
                <div
                  class="border border-border rounded-lg p-4 cursor-pointer hover:border-primary hover:bg-primary-light hover:bg-opacity-5 transition"
                >
                  D) Follow your established budget with allocated percentages
                  for savings, bills, fun money, and investments
                </div>
              </div>
            </div>
            <a
              href="/quiz"
              class="block w-full bg-primary text-white text-center font-medium py-3 rounded-lg hover:bg-primary-dark transition"
            >
              Continue Quiz & See Results
            </a>
          </div>
        </div>
      </div>
    </section>

    <section id="stories" class="py-20 bg-surface">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-4">
          Real Adulting Stories
        </h2>
        <p class="text-xl text-gray-600 text-center max-w-3xl mx-auto mb-16">
          Honest stories from people just like you who are navigating the ups
          and downs of adult life.
        </p>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-surface rounded-xl p-6 shadow-md">
            <p class="text-gray-600 italic mb-6">
              "I used to panic every time I needed to call about my internet
              bill. Now I handle those calls like a pro. Small win, but it feels
              huge!"
            </p>
            <div class="flex items-center gap-4">
              <img
                src="/api/placeholder/50/50"
                alt="Kenta"
                class="w-12 h-12 rounded-full"
              />
              <div>
                <div class="font-semibold">Kenta, 23</div>
                <div class="text-sm text-gray-500">Tokyo</div>
              </div>
            </div>
          </div>

          <div class="bg-surface rounded-xl p-6 shadow-md">
            <p class="text-gray-600 italic mb-6">
              "Finding this community helped me realize I wasn't behind or
              failing at adulting. We're all just figuring it out one step at a
              time."
            </p>
            <div class="flex items-center gap-4">
              <img
                src="/api/placeholder/50/50"
                alt="Olivia"
                class="w-12 h-12 rounded-full"
              />
              <div>
                <div class="font-semibold">Olivia, 25</div>
                <div class="text-sm text-gray-500">Melbourne</div>
              </div>
            </div>
          </div>

          <div class="bg-surface rounded-xl p-6 shadow-md">
            <p class="text-gray-600 italic mb-6">
              "I went from eating takeaway every night to meal prepping weekly.
              My wallet and body both feel better - and I actually enjoy cooking
              now!"
            </p>
            <div class="flex items-center gap-4">
              <img
                src="/api/placeholder/50/50"
                alt="James"
                class="w-12 h-12 rounded-full"
              />
              <div>
                <div class="font-semibold">James, 21</div>
                <div class="text-sm text-gray-500">Auckland</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="community" class="py-20">
      <div class="container mx-auto px-4">
        <div class="bg-primary rounded-xl p-8 md:p-12 text-center text-white">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">
            Join Our Tribe of Adulting Works-in-Progress
          </h2>
          <p class="text-xl max-w-3xl mx-auto mb-8">
            Connect with others who are navigating adulthood one day at a time.
            Share tips, celebrate wins (big and small), and know you're not
            alone in this journey.
          </p>
          <a
            href="#"
            class="inline-block px-6 py-3 bg-white text-primary font-medium rounded-lg hover:bg-gray-100 transition"
          >
            Check Out The Tribe
          </a>
        </div>
      </div>
    </section>

    <footer class="bg-surface py-12 md:py-16">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-4 gap-8 md:gap-12 mb-8">
          <div>
            <div class="text-2xl font-bold text-primary mb-4">Grownish</div>
            <p class="text-gray-600">
              Helping young adults navigate life's challenges with confidence
              and community.
            </p>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Content</h4>
            <ul class="space-y-2">
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Latest Stories</a
                >
              </li>
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Adulting Tips</a
                >
              </li>
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Financial Basics</a
                >
              </li>
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Wellness</a
                >
              </li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-4">Community</h4>
            <ul class="space-y-2">
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Join The Tribe</a
                >
              </li>
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
                  >Events</a
                >
              </li>
              <li>
                <a href="#" class="text-gray-600 hover:text-primary transition"
